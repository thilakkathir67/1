  <meta charset="UTF-8">
  <title>Smart Chat App</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #eef2f3;
      display: flex;
      justify-content: center;
      padding-top: 50px;
    }
    .chat-container {
      background: white;
      width: 400px;
      height: 500px;
      border-radius: 10px;
      box-shadow: 0 0 10px #ccc;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }
    .messages {
      flex: 1;
      padding: 15px;
      overflow-y: auto;
    }
    .message {
      background: #dcf8c6;
      padding: 10px;
      margin: 5px 0;
      border-radius: 5px;
      max-width: 70%;
    }
    .bot-message {
      background: #e0e0e0;
      padding: 10px;
      margin: 5px 0;
      border-radius: 5px;
      max-width: 70%;
      align-self: flex-start;
    }
    .input-area {
      display: flex;
      border-top: 1px solid #ccc;
    }
    .input-area input {
      flex: 1;
      padding: 10px;
      border: none;
    }
    .input-area button {
      padding: 10px;
      background: #4caf50;
      color: white;
      border: none;
      cursor: pointer;
    }
    .input-area input:focus, .input-area button:focus {
      outline: none;
    }
  </style>
